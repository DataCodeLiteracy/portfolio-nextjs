{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint-config-prettier", "plugin:json/recommended", "next"],
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [".eslintrc.json"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error", "info"] }]
  }
}
